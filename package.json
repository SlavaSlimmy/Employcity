{
  "name": "employcity",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "homepage": "https://SlavaSlimmy.github.io/Employcity",
  "scripts": {
    "dev": "npm run build:critical && vite --host",
    "build": "npm run build:critical && vite build",
    "preview": "vite preview --host",
    "build:critical": "sass src/styles/critical.scss public/critical.css --no-source-map --style=compressed",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "predeploy": "npm run build:critical && vite build",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.7.3",
    "sass": "^1.94.2",
    "vite": "^7.2.4",
    "gh-pages": "^6.3.0"
  }
}
